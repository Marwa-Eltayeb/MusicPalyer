<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/layoutHeight"
        android:layout_weight="1"
        android:background="@color/backgroundColorOfImage"
        android:contentDescription="@string/photo_of_the_singer"
        android:scaleType="fitXY"
        android:src="@drawable/music_icon" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="0dp"
        android:layout_height="@dimen/layoutHeight"
        android:layout_weight="2.5"
        android:gravity="center"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/textSize"
        android:textStyle="bold|italic"
        tools:text="Celin Dion" />

    <ImageView
        android:id="@+id/play_music"
        android:layout_width="0dp"
        android:layout_height="@dimen/layoutHeight"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".5"
        android:contentDescription="@string/play_song"
        android:src="@drawable/ic_play_arrow_black" />
</LinearLayout>